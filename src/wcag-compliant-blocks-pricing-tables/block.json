{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wcag-compliant-blocks/wcag-compliant-blocks-pricing-tables",
	"version": "0.1.0",
	"title": "WCAG Compliant Pricing Tables",
	"category": "widgets",
	"icon": "editor-table",
	"description": "Accessible pricing tables block with configurable tiers.",
	"example": {
        "attributes": {
            "tiers": [
                {
                    "name": "Basic",
                    "price": "$10/month",
                    "description": "A great starting point for your needs.",
                    "featured_table": false,
                    "features": [
                        { "text": "Feature 1", "isExcluded": false },
                        { "text": "Feature 2", "isExcluded": false },
                        { "text": "Feature 3", "isExcluded": true }
                    ],
                    "buttonText": "Get Started",
                    "buttonUrl": "#"
                },
                {
                    "name": "Pro",
                    "price": "$20/month",
                    "description": "Our most popular plan, designed for professionals.",
                    "featured_table": true,
                    "features": [
                        { "text": "Feature 1", "isExcluded": false },
                        { "text": "Feature 2", "isExcluded": false },
                        { "text": "Feature 3", "isExcluded": false }
                    ],
                    "buttonText": "Get Started",
                    "buttonUrl": "#"
                }
            ]
        }
    },
	"supports": {
		"html": false,
		"align": ["wide","full"],
		"defaultControls": {
            "align": "wide"
        }
	},
	"textdomain": "wcag-compliant-blocks-pricing-tables",
	"attributes": {
		"tiers": {
			"type": "array",
			"default": [
				{
					"name": "Basic",
					"price": "$10/month",
					"description": "Basic plan features",
					"featured_table": false,
					"features": [
						{
							"text": "Feature 1",
							"isExcluded": false
						},
						{
							"text": "Feature 2", 
							"isExcluded": false
						}
					],
					"buttonText": "Get Started",
					"buttonUrl": ""
				},
				{
					"name": "Pro",
					"price": "$20/month",
					"description": "Pro plan features",
					"featured_table": true,
					"features": [
						{
							"text": "Feature 1",
							"isExcluded": false
						},
						{
							"text": "Feature 2",
							"isExcluded": false
						}
					],
					"buttonText": "Get Started",
					"buttonUrl": ""
				}
			]
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
